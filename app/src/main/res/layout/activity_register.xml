<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zhuce">

    <EditText
        android:id="@+id/ett_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="请输入账号"
        />

    <EditText
        android:id="@+id/ett_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ett_account"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="请输入密码"
        />

    <EditText
        android:id="@+id/ett_samepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ett_password"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="请再次输入密码"
        />

    <Button
        android:id="@+id/btn_register1"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_below="@id/ett_samepassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="注   册"
        android:textSize="20sp" />

</RelativeLayout>